<style type="text/css">
  #tf--signin-hero {
    padding-bottom: 100px;
  }

  #tf--signin-hero img {
    z-index: -2;
    bottom: 0;
    right: -50px;
    width: 350px;
  }

  #tf--signin-hero-merdeka {
    background: linear-gradient(92.22deg, #0088E2 -16.46%, #77C6F2 91.03%, #F0FFD8 156.09%), #FFFFFF;
  }

  #tf--signin-hero-merdeka img {
    transform: translateY(calc(-4rem)) translateX(calc(25rem - 50vw)) scale(.25);
  }
  #tf--signin-splash-merdeka {
    padding-top: 4rem; padding-bottom: 4rem;
  }

  #seasonal-signin-illustration-splash-fireworks {
    top: 60%; right: 10%;
    width: 50% !important;
  }

  #seasonal-signin-illustration-splash {
    position: relative;
    width: 100%;
  }
  
  #seasonal-signin-illustration-splash img {
    position: absolute;
    width: 100%;
  }

  #seasonal-signin-illustration-splash #seasonal-signin-illustration-splash-flag {
    width: 30%;
    right: 0;
    transform: translateX(-17%) translateY(80%);
  }
  #seasonal-signin-illustration-splash .seasonal-signin-illustration-splash-sprite {
    width: 14%;
  }
  #seasonal-signin-illustration-splash #seasonal-signin-illustration-splash-sprite-1 {
    animation: merdeka-moving-cloud-1 25s infinite linear;
    transform: translateY(12rem);
  }
  #seasonal-signin-illustration-splash #seasonal-signin-illustration-splash-sprite-2 {
    animation: merdeka-moving-cloud-2 15s infinite linear;
    transform: translateY(20rem);
    transform: translateY(900%);
  }
  #seasonal-signin-illustration-splash #seasonal-signin-illustration-splash-sprite-3 {
    animation: merdeka-moving-cloud-3 15s infinite linear;
    transform: translateY(250%);
  }
  #seasonal-signin-illustration-splash #seasonal-signin-illustration-splash-sprite-4 {
    animation: merdeka-moving-cloud-4 25s infinite linear;
    transform: translateY(16rem) translateX(14rem);
    transform: translateY(16rem) translateX(8rem);
    transform: translateY(500%) translateX(180%);
    transform: translateY(500%) translateX(100%);
  }
  
  @keyframes merdeka-moving-cloud-1 {
    0% {
      opacity: 1;
      transform: translateY(12rem) translateX(15rem);
      transform: translateY(400%) translateX(175%);
    }
    50% {
      opacity: 0;
      transform: translateY(12rem) translateX(30rem);
      transform: translateY(400%) translateX(400%);
    }
    51% {
      opacity: 0;
      transform: translateY(12rem) translateX(0rem);
      transform: translateY(400%) translateX(50%);
    }
    100% {
      opacity: 1;
      transform: translateY(12rem) translateX(15rem);
      transform: translateY(400%) translateX(175%);
    }
  }
  @keyframes merdeka-moving-cloud-2 {
    0% {
      opacity: 0;
    }
    15% {
      opacity: 1;
    }
    85% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      transform: translateY(20rem) translateX(30rem);
      transform: translateY(900%) translateX(400%);
    }
  }
  @keyframes merdeka-moving-cloud-3 {
    0% {
      opacity: 1;
      transform: translateY(6rem) translateX(25rem);
      transform: translateY(250%) translateX(295%);
    }
    25% {
      opacity: 0;
      transform: translateY(6rem) translateX(30rem);
      transform: translateY(250%) translateX(350%);
    }
    26% {
      opacity: 0;
      transform: translateY(6rem) translateX(10rem);
      transform: translateY(250%) translateX(130%);
    }
    75% {
      opacity: 1;
      transform: translateY(6rem) translateX(20rem);
      transform: translateY(250%) translateX(240%);
    }
    100% {
      transform: translateY(6rem) translateX(25rem);
      transform: translateY(250%) translateX(295%);
    }
  }
  @keyframes merdeka-moving-cloud-4 {
    0% {
      opacity: 1;
      transform: translateY(16rem) translateX(9.5rem);
      transform: translateY(500%) translateX(120%);
    }
    25% {
      opacity: 1;
      transform: translateY(16rem) translateX(11rem);
      transform: translateY(500%) translateX(140%);
    }
    75% {
      opacity: 0;
      transform: translateY(16rem) translateX(14rem);
      transform: translateY(500%) translateX(180%);
    }
    76% {
      opacity: 0;
      transform: translateY(16rem) translateX(8rem);
      transform: translateY(500%) translateX(100%);
    }
    100% {
      opacity: 1;
      transform: translateY(16rem) translateX(9.5rem);
      transform: translateY(500%) translateX(120%);
    }
  }

  @media (min-width: 576px) {
    #tf--signin-hero img {
      right: 0;
      width: 400px;
    }
    #tf--signin-hero-merdeka img {
      transform: translateY(calc(-4rem)) translateX(calc(23rem - 50vw)) scale(.25);
    }
    #tf--signin-splash-merdeka-title {
      min-width: 24rem;
    }

  }

  @media (min-width: 768px) {
    #tf--signin-hero {
      padding-bottom: 40px;
    }
    #tf--signin-hero img {
      width: 450px;
    }
    #tf--signin-hero-merdeka img {
      transform: translateY(calc(-3rem)) translateX(calc(20rem - 50vw)) scale(.25);
    }

  }

  @media (min-width: 992px) {
    /*
    #tf--signin-hero {
      padding-bottom: 0;
    }
    #tf--signin-hero img {
      width: 600px;
    }*/
    #tf--signin-hero-merdeka img {
      transform: translateY(.75rem) translateX(5rem) scale(.75);
    }
    #tf--signin-splash-merdeka {
      padding-top: 6rem; padding-bottom: 6rem;
    }
    #tf--signin-splash-merdeka #tf--signin-splash-merdeka-illustration {      
      padding:2rem;
    }  
  
  }

  @media (min-width: 1200px) {
    #tf--signin-hero-merdeka img {
      transform: translateY(.75rem) translateX(-4rem) scale(.75);
    }
    #tf--signin-splash-merdeka {
      padding-top: 4rem; padding-bottom: 8rem;
    }
    #tf--signin-splash-merdeka #tf--signin-splash-merdeka-illustration {      
      padding:4rem;
    }  
  
  }


</style>

