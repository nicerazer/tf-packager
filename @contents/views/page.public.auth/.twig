<style type="text/css">
  #tf--signin-hero {
    padding-bottom: 100px;
  }

  #tf--signin-hero img {
    z-index: -2;
    bottom: 0;
    right: -50px;
    width: 350px;
  }

  @media (min-width: 576px) {
    #tf--signin-hero img {
      right: 0;
      width: 400px;
    }
  }

  @media (min-width: 768px) {
    #tf--signin-hero {
      padding-bottom: 40px;
    }
    #tf--signin-hero img {
      width: 450px;
    }
  }

  @media (min-width: 992px) {
    #tf--signin-hero {
      padding-bottom: 0;
    }
    #tf--signin-hero img {
      width: 600px;
    }
  }

</style>

<section class="text-center py-5 container-fluid bg-primary-darker bg-gradient">
  <h1 class="h1 fw-bolder ff-rubik"><span class="text-primary">Tokey</span><span class="text-secondary">Follower</span></h1>
  <p class="text-light">Pengalaman menggunakan servis follower yang terbaik anda akan alami!</p>
</section>

<section id="tf--signin-hero" class="position-relative">
  <div class="w-100 h-100 overflow-hidden position-absolute" style="z-index: -5;">
    <img src="https://cdn.mypanel.link/af5a5a/d10enccrr81uhdxc.png" alt="" class="position-absolute">
    <div class="position-absolute h-100 w-100 user-select-none" style="z-index:-3; background: linear-gradient(102.84deg, #5DA6D6 0%, #2A80B9 32.55%, #4498CF 69.27%, #78C9FF 100%);"></div>
  </div>

  <div class="container py-5 w-100" style="z-index:1;">
    <div class="row">
      <div class="col-md-7">
        <div class="my-md-3 my-lg-5 py-md-2 py-lg-4">
          <div class="mb-3 mb-md-4">
            <h1 class="text-yellow mb-2 fw-bold"><u class="text-light">MALAYSIA</u><br class="d-sm-none"> FOLLOWER 100%</h1>
            <h3 class="text-light text-lead fs-3">Daftar Sekarang Untuk Dapatkan Bonus</h3>
          </div>
          <a class="btn btn-primary btn-md-lg rounded-5" href="/signup"><h3 class="my-1 mx-2 my-md-2 mx-md-3 text-light fw-bold">DAFTAR <i class="bi bi-box-arrow-in-right"></i></h3></a>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="bg-primary py-1"></div>

<section class="bg-light">
  <div class="container py-5">

    {% if error %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      {{ errorMessage }} Check this error message out
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>    
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{ successMessage }} This is a success message
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>    
    {% endif %}

    <form method="post" action="{{ page['url'] }}">    

      <input type="hidden" name="_csrf" value="{{csrftoken}}">

      <div class="row g-4 mb-3">
        <div class="col-md-4 col-lg-5">
          <div class="form-floating">
            <input name="LoginForm[username]" type="text" class="form-control" id="floatingInput" placeholder="username">
            <label for="floatingInput">Username</label>
          </div>
        </div>

        <div class="col-md-4 col-lg-5">
          <div class="form-floating">
            <input name="LoginForm[password]" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Kata Laluan</label>
          </div>
        </div>

        <div class="col-md-4 col-lg-2">
          <div class="d-grid h-100">
            <button type="submit" class="btn btn-primary h-100 text-light">{{ lang('signin.button') }} <i class="bi bi-check2-circle"></i></button>
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-5">
          <div class="form-check">
            <input class="form-check-input" type="checkbox"  name="LoginForm[remember]" value="1" id="remember">
            <label class="form-check-label" for="flexCheckDefault">
              {{lang('signin.remember_me')}}
            </label>
          </div>
        </div>

        <div class="col-md-5">
          {% if site['resetPassword'] %}
          <a href="{{ page_url('resetpassword') }}" class="forgot-password">{{ lang('signin.reset_password') }}</a>
          {% endif %}
        </div>
      </div>

      <div class="mb-3">
        {% if registration %}
        <span>{{ lang('signin.text') }} <a class="text-decoration-none" href="{{ page_url('signup') }}">{{ lang('signup.title') }}</a></span>
        {% endif %}
      </div>

      {% if captcha %}
      {{ captchaCode }}
      {% endif %}
    </form>

  </div>
</section>

{% if authText %}
{{ authText }}
{% endif %}